<h2>Amend Order</h2>
<br>
<form action="/pizzas/<%= @pizza.id %>" method="POST">
<table>
  <tr>
    <td><label for="first-name-input">First name: </label></td>
    <td><input id="first-name-input" type="text" name="first_name" value="<%= @pizza.first_name %>"></td>
  </tr>
  <tr>
    <td><label for="last-name-input">Last name: </label></td>
    <td><input id="last-name-input" type="text" name="last_name" value="<%= @pizza.last_name %>"></td>
  </tr>
  <tr>
    <td><label for="quantity-input">Quantity: </label></td>
    <td><input id="quantity-input" type="number" min="1" name="quantity" value="<%= @pizza.quantity %>"></td>
  </tr>
  <tr>
    <td><label for="topping-select">Topping: </label></td>
    <td>
      <select class="" id="topping-select" name="topping">
        <option <%= "selected" if @pizza.topping == "Pepperoni" %> value="Pepperoni">Pepperoni</option>
        <option <%= "selected" if @pizza.topping == "Italian Sausage" %> value="Italian Sausage">Italian Sausage</option>
        <option <%= "selected" if @pizza.topping == "Mushroom" %> value="Mushroom">Mushroom</option>
      </select>
    </td>
  </tr>
</table>
  <input type="submit" name="" value="Update Order">
</form>
